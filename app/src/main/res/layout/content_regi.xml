<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alice_wang.datacollect.RegistersActivity"
    tools:showIn="@layout/register_main">


    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/imageView"
        android:src="@drawable/mail_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:id="@+id/edname1"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="58dp"
        android:hint="用户名"
        android:inputType="text" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:src="@drawable/lock_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="98dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edpassword1"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="118dp"
        android:hint="密码"/>


    <TextView
        android:id="@+id/txtgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEX:"
        android:textSize="20dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edpassword1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        android:textSize="20dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtgender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edage"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="218dp"
        android:hint="年龄"/>

    <RadioGroup
        android:id="@+id/sex"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="178dp"

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignLeft="@+id/edpassword1"
        android:layout_alignStart="@+id/edpassword1">
        <RadioButton
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:id="@+id/male"
            android:text="male"
            android:layout_weight="0.24" />

        <RadioButton
            android:layout_height="fill_parent"
            android:layout_width="66dp"
            android:id="@+id/female"
            android:text="female"
            android:layout_weight="0.24" />

    </RadioGroup>


    <Button
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="注册"
        android:textColor="@color/darkwhite"
        android:textSize="20dp"
        android:id="@+id/btregister1"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/sex"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />
    </RelativeLayout>
